# Premium Mail - Configuration Variables
# Copy this file and customize for automated installation
# Usage: source config.env && ./install.sh

# Mail Domain (required)
export MAIL_DOMAIN="example.com"

# Full hostname for mail server (required)
export HOSTNAME_FQDN="mail.example.com"

# Admin email address (required)
export ADMIN_EMAIL="admin@example.com"

# Admin password (leave empty to auto-generate)
export ADMIN_PASSWORD=""

# MySQL root password (leave empty to auto-generate)
export MYSQL_ROOT_PASSWORD=""

# MySQL mail user password (leave empty to auto-generate)
export MYSQL_MAIL_PASSWORD=""

# Email for SSL certificates (leave empty to skip auto-SSL)
export SSL_EMAIL="admin@example.com"

# Roundcube version
export ROUNDCUBE_VERSION="1.6.6"

# Optional: Set timezone
export TZ="UTC"
